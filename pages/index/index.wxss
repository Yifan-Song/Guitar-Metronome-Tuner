page {  
  display: block;  
  min-height: 100%;  
  background-color: cornsilk;  
}  

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 150px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.metronomeHead{
  height: 50px;
  margin: 30px;
}

.metronomeHeader{
    font-size: 25px;
}

.metronomeSpeedBody{
  height: 70px;
}

.beatspeed-num{
  font-size: 30px;
  margin-left: 30px;
  margin-right: 30px;
}

.metronomeButton{
  display: inline;
  font-size: 20px;
  margin-right: 20px;
}

.tunerButton{
  display: inline;
